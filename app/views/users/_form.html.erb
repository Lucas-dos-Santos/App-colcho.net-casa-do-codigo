<%= render 'shared/errors', obj: @user %>
<%= form_for @user do |form|%>
  <div>
    <%= form.label :full_name, "Nome Completo", class:"form-label" %>
    <%= form.text_field :full_name, class: "form-control h-75"  %>
  </div>
  <div>
    <%= form.label :location, "Localização", class:"form-label" %>
    <%= form.text_field :location, class: "form-control h-75" %>
  </div>
  <div>
    <%= form.label :email, class:"form-label" %>
    <%= form.text_field :email, class: "form-control h-75" %>
  </div>
  <div>
    <%= form.label :password, "Senha", class:"form-label" %>
    <%= form.password_field :password, class: "form-control h-75" %>
  </div>
  <div>
    <%= form.label :password_confirmation, "Confirmar Senha", class:"form-label" %>
    <%= form.password_field :password_confirmation, class: "form-control h-75" %>
  </div>
  <div>
    <%= form.label :bio, class:"form-label" %>
    <%= form.text_area :bio, class: "form-control h-75"%>
  </div>
  <div class="text-center">
    <%= form.submit class: "btn btn-info text-white mt-3" %>
  </div>
<% end %>
