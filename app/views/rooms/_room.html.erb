<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Local</th>
      <th>Descrição</th>
      <th colspan="3">
      </tr>
    </thead>
    <tbody>
      <% @rooms.each do |room| %>
        <tr>
          <td><%= room.title %></td>
          <td><%= room.location %></td>
          <td><%= truncate(room.description, length: 30) %></td>
          <td>
            <%= link_to "Ver quarto", room_path(room), class: "btn btn-outline-primary" %>
            <%= link_to "Editar", edit_room_url(room), class: "btn btn-outline-dark" %>
            <%= link_to "Apagar", room, method: :delete, class: "btn btn-outline-danger", data: {confirm: "Tem certeza que quer deletar este quarto?"} %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
